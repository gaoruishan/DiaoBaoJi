<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下时按钮时 -->
    <item android:state_pressed="true"><shape>

            <!-- 边缘线 -->
            <stroke android:width="1dp" android:color="#C0C0C0" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <!-- 填充色 -->
            <solid android:color="#FFFFFF" />
            <!-- gradient   对应颜色渐变。 startcolor、endcolor就不多说了。 android:angle 是指从哪个角度开始变。 -->
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
        </shape></item>
    <item><shape>

            <!-- 边缘线 -->
            <stroke android:width="1dp" android:color="#C0C0C0" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <!-- 填充色 -->
            <solid android:color="#FFFFFF" />
            <!-- gradient   对应颜色渐变。 startcolor、endcolor就不多说了。 android:angle 是指从哪个角度开始变。 -->
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#9B9B9B" />
        </shape></item>

</selector><!-- From: file:/Users/gaoruishan/android/android_studio/DiaoBaoJi/app/src/main/res/drawable/tv_bg.xml -->