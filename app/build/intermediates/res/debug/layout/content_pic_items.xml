<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/appraiser"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="0.5dp"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/default_appraiser" />

    <ImageView
        android:id="@+id/story"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginTop="0.5dp"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/default_story" />

    <!-- 底部详情图片 -->

    <com.zjwy.tiaobaojinew.widget.ListViewForScrollView
        android:id="@+id/lv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:footerDividersEnabled="false" />

</LinearLayout><!-- From: file:/Users/gaoruishan/android/android_studio/DiaoBaoJi/app/src/main/res/layout/content_pic_items.xml -->