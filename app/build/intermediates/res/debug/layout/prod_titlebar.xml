<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prod_titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/buttom_tag_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_back_pd"
        style="@style/title_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:drawableLeft="@drawable/ic_jt_left"
        android:text="@string/returns"
        android:textColor="#9E3EFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_title_pd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/shoppingcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/description"
        android:src="@drawable/addshopcart_shopping_cart" />

</LinearLayout>
