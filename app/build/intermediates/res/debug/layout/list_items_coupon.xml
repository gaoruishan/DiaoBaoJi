<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7" >

    <TextView
        android:id="@+id/tv_coupon_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9B3FF"
        android:padding="5dp"
        android:text="序列号：2014121422" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone" />

    <TextView
        android:id="@+id/list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/list_iv_coupon"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_coupon_order"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_coupon" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_iv_coupon"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/list_iv_coupon"
        android:text="状态：" />

    <TextView
        android:id="@+id/tv_coupon_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_state"
        android:layout_below="@+id/tv_state"
        android:text="金额：50" />

    <TextView
        android:id="@+id/tv_coupon_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_coupon_money"
        android:layout_below="@+id/tv_coupon_money"
        android:text="有效期： " />

    <TextView
        android:id="@+id/tv_coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_coupon_num"
        android:layout_below="@+id/tv_coupon_num"
        android:text="结束时间：2014年12月04日" />

    <TextView
        android:id="@+id/tv_coupon_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_state"
        android:layout_alignBottom="@+id/tv_state"
        android:layout_toRightOf="@+id/tv_state"
        android:text="未使用"
        android:textColor="#FF4A4A" />

</RelativeLayout><!-- From: file:/Users/gaoruishan/android/android_studio/DiaoBaoJiNew011/app/src/main/res/layout/list_items_coupon.xml -->