<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rl_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rents_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/rents_7"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rents_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rents_7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/rents_10"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/market_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rents_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/market_price"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- android:background="@drawable/line" -->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:text="@string/sale_infos"
            android:textSize="12sp" />

        <!-- android:text="赠可爱小熊或时尚的耳罩            满99元减9元                      满199元减19元" -->
        <!-- android:text="赠品满减满减" -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/preferent"
            android:textColor="#A64DFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="@string/jian"
            android:textColor="#A64DFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/jian"
            android:textColor="#A64DFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jian9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/tv_gift"
            android:singleLine="true"
            android:text="@string/jian_9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jian19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/tv_jian9"
            android:singleLine="true"
            android:text="@string/jian_19"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_jian9"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:text="@string/gifts"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jian19"
            android:layout_toLeftOf="@+id/tv_gift"
            android:text="@string/jian"
            android:textColor="#A64DFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jian199"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/tv_jian9"
            android:singleLine="true"
            android:text="@string/jian_199"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/content_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/brand"
        android:textColor="#A851FF"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:text="@string/sort" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sort"
            android:layout_below="@+id/sort"
            android:text="@string/origin" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/description"
            android:src="@drawable/logo12" />

        <TextView
            android:id="@+id/material_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/material_inner"
            android:layout_below="@+id/material_inner"
            android:text="@string/material_outer" />

        <TextView
            android:id="@+id/style_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/material_outer"
            android:layout_below="@+id/material_outer"
            android:text="@string/style_open" />

        <TextView
            android:id="@+id/structure_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/style_open"
            android:layout_below="@+id/style_open"
            android:text="@string/structure_inner" />

        <TextView
            android:id="@+id/colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/origin"
            android:layout_below="@+id/origin"
            android:text="@string/colors" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/colors"
            android:layout_below="@+id/colors"
            android:text="@string/size" />

        <TextView
            android:id="@+id/material_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignLeft="@+id/size"
            android:text="@string/material_inner" />

        <TextView
            android:id="@+id/level_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/structure_inner"
            android:layout_below="@+id/structure_inner"
            android:layout_marginBottom="5dp"
            android:text="@string/level_new" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="18sp" />

</LinearLayout><!-- From: file:/Users/gaoruishan/android/android_studio/DiaoBaoJiNew011/app/src/main/res/layout/content_txt_items.xml -->