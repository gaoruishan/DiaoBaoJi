<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/NoActionBar</item>
    </style>

    <style name="AppTheme1" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/NoActionBar</item>
        <!-- 设置主题背景图片 -->
        <item name="android:windowFrame">@drawable/pager01</item>
        <item name="android:windowBackground">?android:windowFrame</item>
    </style>
    <!-- =============设置底部tag的属性（已废除）=============================== -->
    <style name="main_tag_buttom">
        <item name="android:textSize">@dimen/buttom_tab_font_size</item>
        <!-- <item name="android:textColor">@color/text_color</item> -->
        <item name="android:gravity">center</item>
        <!-- <item name="android:background">@drawable/transparent</item> 用的并不多 -->
        <!-- 去除  按钮 -->
        <item name="android:button">@null</item>
    </style>
    <!-- =======================================自定义的主题========================================= -->
    <style name="Theme.CustomTheme" parent="AppBaseTheme">

        <!-- 设置actionBar -->
        <item name="android:actionBarStyle">@style/Widget.CustomActionBar</item>
        <!-- 设置tag标题 -->
        <item name="android:actionBarTabBarStyle">@style/Widget.CustomActionBarTabBarStyle</item>
        <!-- 设置tag标题的自定义样式 -->
        <item name="android:actionBarTabStyle">@style/Widget.CustomActionBarTabViewStyle</item>
        <!-- 设置tag标题的文本 -->
        <item name="android:actionBarTabTextStyle">@style/Widget.CustomActionBarTextStyle</item>
        <item name="android:actionButtonStyle">@style/Widget.CustomActionButtonStyle</item>
    </style>

    <!-- 设置actionbar的属性（去除ActionBar： Theme.Holo.NoActionBar ） -->
    <style name="Widget.CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
    </style>
    <!-- 设置tag标题的属性 -->
    <style name="Widget.CustomActionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">@color/mediumpurple</item>
    </style>
    <!-- 定义tabView 分隔条 -->
    <style name="Widget.CustomActionBarTabViewStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="android:divider">@drawable/actionbar_tab_indicator_divider</item>
        <item name="android:padding">0dp</item>
    </style>
    <!-- tag的文本颜色和大小 （） -->
    <style name="Widget.CustomActionBarTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_color_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 按钮样式设置 （背景） -->
    <style name="Widget.CustomActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:background">@color/actionbar_button_selector</item>
    </style>

    <style name="custom_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="style_imageview">
        <item name="android:height">14sp</item>
        <item name="android:width">@color/black</item>
    </style>

    <style name="style_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_text_white">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_btn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
    </style>

</resources>