<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:background="#8000FF"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/kefu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/kefu"
        android:clickable="true"
        android:text="" />

    <TextView
        android:id="@+id/prod_remind"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/prod_remind_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="到货提醒" />

    <TextView
        android:id="@+id/cart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/prod_cart_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/order"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/prod_shopping_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="#ffffff" />

</LinearLayout>